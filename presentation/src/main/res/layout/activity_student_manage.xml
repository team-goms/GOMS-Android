<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/goms_main_background"
    tools:context="com.goms.presentation.view.manage.StudentManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/student_manage_back_arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backarrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학생 정보 수정"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/manage_student_search_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="23dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찾으시는 학생이 있으신가요?"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textSize="16sp"
                    android:textColor="@color/goms_third_color_gray"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_search_24"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/manage_student_student_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="475dp"
        app:behavior_hideable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/manage_student_bottom_sheet_view"
            android:layout_width="match_parent"
            android:background="@drawable/admin_filter_background"
            android:layout_height="475dp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/filter_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="역할"
                android:textColor="@color/goms_filter_title_color"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_text_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="25dp"
                android:gravity="top">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_student"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="학생"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/admin_attribute_button_selected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_council"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="학생회"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_blacklist"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="외출 금지"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="학년"
                android:textColor="@color/goms_filter_title_color"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_text_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="25dp"
                android:gravity="top">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_grade1"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/admin_attribute_button_selected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_grade2"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="2"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_grade3"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="3"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="반"
                android:textColor="@color/goms_filter_title_color"
                android:textSize="16sp"
                android:fontFamily="@font/sf_pro_text_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:gravity="top">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_class1"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/admin_attribute_button_selected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_class2"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="2"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_class3"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="3"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/filter_attr_class4"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:text="4"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/goms_second_color_gray"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="검색하기"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/admin_attribute_button_selected"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modify_role_bottom_sheet_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/admin_filter_background"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:id="@+id/modify_filter_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="역할"
                    android:textColor="@color/goms_filter_title_color"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/modify_filter_attr_student"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/modify_filter_attr_student"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@drawable/admin_attribute_button_selected"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="학생"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/modify_filter_attr_council"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/modify_filter_title_text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/modify_filter_attr_council"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="학생회"
                    android:textColor="@color/goms_second_color_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/modify_filter_attr_student"
                    app:layout_constraintEnd_toStartOf="@+id/modify_filter_attr_blacklist"
                    app:layout_constraintStart_toEndOf="@+id/modify_filter_attr_student"
                    app:layout_constraintTop_toTopOf="@+id/modify_filter_attr_student" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/modify_filter_attr_blacklist"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@drawable/admin_attribute_button_unselected"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="외출 금지"
                    android:textColor="@color/goms_second_color_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/modify_filter_attr_council"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/modify_filter_attr_council"
                    app:layout_constraintTop_toTopOf="@+id/modify_filter_attr_council" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="수정하기"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/admin_attribute_button_selected"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>