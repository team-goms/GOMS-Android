<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.GSM_GOMS" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="mainColor">@color/goms_main_color_student</item>
    <item name="android:statusBarColor">@color/goms_main_background</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Theme.GSM_GOMS_ADMIN" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="mainColor">@color/goms_main_color_admin</item>
    <item name="android:statusBarColor">@color/goms_main_background</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <item name="windowSplashScreenBackground">@color/goms_main_color_student</item>
    <item name="windowSplashScreenAnimatedIcon">@drawable/goms_splash_logo</item>
    <item name="windowSplashScreenAnimationDuration">2000</item>
    <item name="postSplashScreenTheme">@style/Theme.GSM_GOMS</item>
  </style>

  <style name="BottomNavigationViewTextStyle">
    <item name="fontFamily">@font/sf_pro_text_regular</item>
  </style>
</resources>